{% extends 'base.html.twig' %}

{% block body %}
    <h1>ScheduleItem</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ scheduleItem.id }}</td>
            </tr>
            <tr>
                <th>Start</th>
                <td>{% if scheduleItem.start %}{{ scheduleItem.start|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Stop</th>
                <td>{% if scheduleItem.stop %}{{ scheduleItem.stop|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ scheduleItem.duration }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('scheduleitem_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('scheduleitem_edit', { 'id': scheduleItem.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
